<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <Spinner
        android:id="@+id/spinner_retrofitMap"
        android:layout_width="50dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="@+id/btn_search_RatrofitMap"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/et_searchBar_retrofitMap"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="#00ffffff"
        android:paddingStart="5dp"
        android:paddingEnd="10dp"
        android:hint="search place here..."
        app:layout_constraintBottom_toTopOf="@+id/retrofitMap"
        app:layout_constraintEnd_toStartOf="@+id/btn_search_RatrofitMap"
        app:layout_constraintStart_toEndOf="@+id/spinner_retrofitMap"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/btn_search_RatrofitMap"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:src="@drawable/ic_baseline_search_24"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <fragment
        android:id="@+id/retrofitMap"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@+id/btn_setPoliline_retrofitMap"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_search_RatrofitMap" />

    <Button
        android:id="@+id/btn_setPoliline_retrofitMap"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="set Route"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/iv_info_retrofitMap"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:src="@drawable/ic_baseline_info_24"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/spinner_retrofitMap" />


    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cv_retrofitMap"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        app:layout_constraintStart_toEndOf="@+id/iv_info_retrofitMap"
        app:layout_constraintTop_toBottomOf="@+id/et_searchBar_retrofitMap">

        <TextView
            android:id="@+id/tv_infoDetails_retrofitMap"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:textStyle="bold"
            android:visibility="gone"
            tools:visibility="visible"/>

    </com.google.android.material.card.MaterialCardView>

</androidx.constraintlayout.widget.ConstraintLayout>